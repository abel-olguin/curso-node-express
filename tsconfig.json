{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./types"
    ]
  }
}
